<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:text="上装"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_up_photo"
        android:layout_toEndOf="@+id/img_up_photo"
        android:layout_marginStart="18dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="类型"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="11dp"
        android:id="@+id/txt_up_type" />

    <TextView
        android:text="颜色"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/txt_up_type"
        android:layout_toEndOf="@+id/txt_up_type"
        android:layout_marginStart="24dp"
        android:id="@+id/txt_up_color" />

    <TextView
        android:text="季节"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/txt_up_keywords"
        android:layout_alignStart="@+id/txt_up_color"
        android:id="@+id/txt_up_season" />

    <TextView
        android:text="风格"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/txt_up_keywords"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/txt_up_type"
        android:layout_alignStart="@+id/txt_up_type" />

    <TextView
        android:text="类型"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:id="@+id/txt_down_type"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="下装"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/img_down_photo"
        android:layout_alignStart="@+id/txt_up_keywords" />

    <TextView
        android:text="风格"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txt_down_type"
        android:layout_alignStart="@+id/txt_down_type"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_down_keywords" />

    <TextView
        android:text="季节"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/txt_down_keywords"
        android:layout_alignEnd="@+id/txt_down_color"
        android:id="@+id/txt_down_season" />

    <TextView
        android:text="颜色"
        android:textSize="8sp"
        android:textColor="@color/text_view"
        android:gravity="center"
        android:background="@drawable/text_view_border_match"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/txt_down_color"
        android:layout_alignBaseline="@+id/txt_down_type"
        android:layout_alignBottom="@+id/txt_down_type"
        android:layout_alignStart="@+id/txt_up_season" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="false"
        android:progressTint="@color/rating_bar"
        android:id="@+id/rtb_up"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_above="@+id/txt_up_type"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="12dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="false"
        android:progressTint="@color/rating_bar"
        android:id="@+id/rtb_down"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_above="@+id/txt_down_type"
        android:layout_alignStart="@+id/rtb_up" />

    <CheckBox
        android:text="喜欢此搭配?"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_below="@+id/img_down_photo"
        android:layout_toEndOf="@+id/txt_down_season" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@color/gray"
        android:layout_marginTop="12dp"
        android:id="@+id/img_down_photo"
        android:layout_below="@+id/img_up_photo"
        android:layout_alignStart="@+id/img_up_photo" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@color/gray"
        android:id="@+id/img_up_photo"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>