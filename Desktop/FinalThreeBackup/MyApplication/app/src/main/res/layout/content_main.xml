<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.ui.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </FrameLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

            <RadioButton
                android:button="@null"
                android:text="社区"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_menu_slideshow"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_community"
                android:layout_weight="1" />

            <RadioButton
            android:button="@null"
            android:text="智能"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_menu_manage"
                android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_control"
            android:layout_weight="1" />

            <RadioButton
                android:button="@null"
                android:text="单品浏览"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_menu_share"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_collocation"
                android:layout_weight="1" />
            <RadioButton
                android:button="@null"
                android:text="我的"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_menu_send"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_mine"
                android:layout_weight="1" />
        </RadioGroup>
    </LinearLayout>


</LinearLayout>
