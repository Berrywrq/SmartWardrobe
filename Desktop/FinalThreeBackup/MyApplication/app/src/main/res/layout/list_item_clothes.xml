<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/list_selector">

    <TextView
        android:text="风格"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:background="@drawable/text_view_border"
        android:id="@+id/txt_keywords"
        android:layout_below="@+id/txt_type"
        android:layout_alignStart="@+id/txt_type"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="颜色"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:background="@drawable/text_view_border"
        android:layout_marginStart="17dp"
        android:id="@+id/txt_color"
        android:layout_alignBottom="@+id/txt_type"
        android:layout_toEndOf="@+id/txt_type"
        android:layout_alignTop="@+id/txt_type" />

    <TextView
        android:text="季节"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:background="@drawable/text_view_border"
        android:id="@+id/txt_season"
        android:layout_alignBottom="@+id/txt_keywords"
        android:layout_alignStart="@+id/txt_color"
        android:layout_alignTop="@+id/txt_keywords" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:id="@+id/img_photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="类型"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:id="@+id/txt_type"
        android:background="@drawable/text_view_border"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@+id/img_photo"
        android:layout_toEndOf="@+id/img_photo"
        android:layout_marginStart="51dp" />

</RelativeLayout>
